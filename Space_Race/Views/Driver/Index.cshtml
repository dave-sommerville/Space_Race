@model IEnumerable<Driver>
<h1>All Drivers</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New Driver</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Driver Id</th>
            <th>Driver Name</th>
            <th>Vehicle Model</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DriverId</td>
                <td>@item.Name</td>
                <td>@(item.Vehicle != null ? item.Vehicle.Model : "No Vehicle")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DriverId" class="btn btn-primary">Edit</a>
                    <form asp-action="Delete" asp-route-id="@item.DriverId" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Home</a>
